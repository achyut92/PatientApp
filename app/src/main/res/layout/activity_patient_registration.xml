
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/PatientRegistration"
    android:background="#B1D4FE">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_margin="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/patientId"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Patient ID"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/PATIENT_NAME"
            android:layout_below="@+id/patientId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Name"
            android:textStyle="bold"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="20"
            android:id="@+id/PATIENT_ADDRESS_1"
            android:layout_below="@+id/PATIENT_NAME"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Block Number"
            android:textStyle="bold"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="20"
            android:id="@+id/PATIENT_ADDRESS_2"
            android:layout_below="@+id/PATIENT_ADDRESS_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Unit Number"
            android:textStyle="bold"
            android:singleLine="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/POSTAL_CODE"
            android:hint="Postal Code"
            android:textStyle="bold"
            android:maxLength="6"
            android:singleLine="true"
            android:inputType="number"
            android:ems="20"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:id="@+id/reg_ic_num"
            android:layout_below="@+id/PATIENT_ADDRESS_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="NRIC"
            android:inputType="textCapCharacters"
            android:textStyle="bold"
            android:singleLine="true"
            android:maxLines="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:id="@+id/textView2" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BLOOD_GROUP"
            android:layout_below="@+id/PATIENT_ADDRESS_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elegantTextHeight="true"
            android:textStyle="bold"
            android:maxLength="3"
            android:entries="@array/blood_group"
            android:prompt="@string/blood_prompt"
            android:spinnerMode="dialog" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/PATIENT_PHONE"
            android:layout_below="@+id/BLOOD_GROUP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Mobile"
            android:textStyle="bold"
            android:singleLine="true"
            android:maxLength="11"
            android:ems="20" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_margin="5dp"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/reg_reg"
            android:elevation="10dp"
            android:width="150dp"
            android:background="@android:color/holo_green_dark"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/reg_cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:width="150dp"
            android:elevation="10dp"
            android:background="@android:color/holo_red_light"
            android:layout_marginRight="5dp" />


    </LinearLayout>

</RelativeLayout>
</ScrollView>